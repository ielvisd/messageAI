#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

# Run linting
echo "📝 Running ESLint..."
pnpm lint
if [ $? -ne 0 ]; then
  echo "❌ Linting failed. Please fix the issues before pushing."
  exit 1
fi

# Run unit tests
echo "🧪 Running unit tests..."
pnpm test:run
if [ $? -ne 0 ]; then
  echo "❌ Unit tests failed. Please fix the issues before pushing."
  exit 1
fi

# Run critical path E2E tests
echo "🎭 Running critical path E2E tests..."
pnpm test:e2e:critical
if [ $? -ne 0 ]; then
  echo "❌ Critical path E2E tests failed. Please fix the issues before pushing."
  exit 1
fi

echo "✅ All pre-push checks passed! Pushing to remote..."
